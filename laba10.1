#include <iostream>

using namespace std;

double da(int x)
{
    if (x == 1)
        return 3;
    return  da(x-1) / 10;
}
int main() {
    cout << "the second number of the member of the series who wants to know: ";
    int x;
    cin >> x;
    cout << "series member: " << x << " = " << da(x);
    return 0;
}
